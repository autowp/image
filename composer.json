{
    "name": "autowp/image",
    "description": "Image services for autowp.ru",
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitry Pereslegin",
            "email": "dmitry@pereslegin.ru",
            "homepage": "http://pereslegin.ru"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-imagick": "*",
        "ext-exif": "*",
        "zendframework/zend-mvc": "^3.1.1",
        "zendframework/zend-mvc-console": "^1.2",
        "autowp/zf-components": "^2.0.0",
        "zendframework/zend-db": "^2.9.2"
    },
    "autoload": {
        "psr-4": {
            "Autowp\\Image\\": "src/"
        }
    },
    "require-dev": {
        "ext-pdo": "*",
        "phpunit/phpunit": "^7.0.2",
        "satooshi/php-coveralls": "^1.0",
        "codeclimate/php-test-reporter": "^0.4.0",
        "zendframework/zend-coding-standard": "~1.0.0",
        "phpmd/phpmd" : "^2.6"
    },
    "autoload-dev": {
        "psr-4": {
            "AutowpTest\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@phpmd",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "phpmd" : "phpmd src,test text ruleset.xml --suffixes php"
    }
}
